{% extends 'base.html.twig' %}

{% block title %}
	{{ (edit ? 'provider.edit_title' : 'provider.new_title')|trans }}
{% endblock %}

{% block body %}
	<div class="container my-4">
		<h1 class="mb-4">{{ (edit ? 'provider.edit_title' : 'provider.new_title')|trans }}</h1>

		<div class="card p-4 shadow-sm">
			{{ form_start(form) }}
			<div class="row">
				<div class="col-md-6 mb-3">
					{{ form_label(form.name, 'provider.name'|trans) }}
					{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.name) }}
				</div>

				<div class="col-md-6 mb-3">
					{{ form_label(form.email, 'provider.email'|trans) }}
					{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.email) }}
				</div>

				<div class="col-md-6 mb-3">
					{{ form_label(form.phone, 'provider.phone'|trans) }}
					{{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.phone) }}
				</div>

				<div class="col-md-6 mb-3">
					{{ form_label(form.type, 'provider.type'|trans) }}
					{{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
					{{ form_errors(form.type) }}
				</div>

				<div class="col-md-6 mb-3">
					<div class="form-check mt-4">
						{{ form_widget(form.active, {'attr': {'class': 'form-check-input'}}) }}
						{{ form_label(form.active, 'provider.active'|trans, {'label_attr': {'class': 'form-check-label'}}) }}
						{{ form_errors(form.active) }}
					</div>
				</div>
			</div>

			<button class="btn btn-success mt-3">{{ (edit ? 'provider.update_button' : 'provider.create_button')|trans }}</button>
			{{ form_end(form) }}
		</div>

		<a href="{{ path('app_provider') }}" class="btn btn-link mt-3">{{ 'provider.back_to_list'|trans }}</a>
	</div>
{% endblock %}
